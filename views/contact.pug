extends base.pug

block style 
    style
      include ../static/style.css
      include ../static/styleContact.css
block content
    nav#navbar
        ul
            div#logo
                img(src="/static/img/1.jpg")
                | AKD
            li #[a(href="/") Home]
            li #[a(href="/") About]
            li #[a(href="/") Services]
            li #[a(href="/") Class Info]
            li #[a(href="/contact.pug") Contact Us]
    div.container
        h1 Contact Us
        form(action="/contact",method="post")
            input(type="text",name="name",class="myip",placeholder="Name")
            input(type="phone",name="phone",class="myip",placeholder="Phone")
            input(type="email",name="email",class="myip",placeholder="Email")
            input(type="text",name="address",class="myip",placeholder="Address")
            button(class="btn")
                | Submit